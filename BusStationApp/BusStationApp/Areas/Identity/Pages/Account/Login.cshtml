@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<h2>Log In:</h2>
<form method="post">
    <div class="form-group">
        <label>Username:</label>
        <input asp-for="@Model.Input.Email" class="form-control" id="username" name="Email">
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input asp-for="@Model.Input.Password" type="password" class="form-control" id="password" name="Password" />
    </div>
    <button type="submit" class="login" value="Login">Login</button>
</form>
