<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Bus Station</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav>
    <div class="navigation">
        <ul>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <li><a href="/Tickets/MyTickets" class="link-light">My Tickets</a></li>
                <li><a href="/Destinations/Add" class="link-light">Add Destination</a></li>
                <li><a href="/Destinations/All" class="link-light">Destinations</a></li>
                <li><a href="/Identity/Account/Logout" class="link-light">Logout</a></li>
            }
            else
            {
                <li><a href="/Identity/Account/Login" class="link-light">Login</a></li>
                <li><a href="/Identity/Account/Register" class="link-light">Register</a></li>
            }
        </ul>
    </div>
</nav>
<main>
    <div id="page-container">
        <div id="content-wrap">
            @RenderBody()
        </div>
        <footer id="footer">
            <div class="container-fluid text-center">
                <small class="footer-background text-white">
                    CopyRight &copy; Bus Station 2022. All rights reserved.
                </small>
            </div>
        </footer>
    </div>
</main>
</body>
</html>